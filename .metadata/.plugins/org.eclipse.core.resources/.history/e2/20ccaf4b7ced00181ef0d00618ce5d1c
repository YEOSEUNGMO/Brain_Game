package ass;

import java.awt.*;
import java.util.*;
import javax.swing.*;

public class MatchingGame_reset 
{
	Image[] changeImg;
	ImageIcon[] image;
	int [] arr;
	
	public MatchingGame_reset() 
	{
		changeImg = new Image[9];
		image = new ImageIcon[9];	// 9장 필요 - 짝 8장, 뒷면 1장
		arr = new int[16];	// 4 x 4
		
		AddImage();
		RandNumber();
	}
	
	public void AddImage()
	{
		image[0] = new ImageIcon("C:\\Users\\aa\\Downloads\\짜바짜바\\JAVA_project\\src\\Images\\backImage.jpg");	 // 0번은 뒷면으로 설정
		image[1] = new ImageIcon("C:\\Users\\aa\\Downloads\\짜바짜바\\JAVA_project\\src\\Images\\Marik.jpg");
		image[2] = new ImageIcon("C:\\Users\\aa\\Downloads\\짜바짜바\\JAVA_project\\src\\Images\\tomcat.png");
		image[3] = new ImageIcon("C:\\Users\\aa\\Downloads\\짜바짜바\\JAVA_project\\src\\Images\\mushroom.jpg");
		image[4] = new ImageIcon("C:\\Users\\aa\\Downloads\\짜바짜바\\JAVA_project\\src\\Images\\kupa.jpg");
		image[5] = new ImageIcon("C:\\Users\\aa\\Downloads\\짜바짜바\\JAVA_project\\src\\Images\\crazyDog.png");
		image[6] = new ImageIcon("C:\\Users\\aa\\Downloads\\짜바짜바\\JAVA_project\\src\\Images\\sonic.jpg");
		image[7] = new ImageIcon("C:\\Users\\aa\\Downloads\\짜바짜바\\JAVA_project\\src\\Images\\cuvee.jpg");
		image[8] = new ImageIcon("C:\\Users\\aa\\Downloads\\짜바짜바\\JAVA_project\\src\\Images\\pikachu.jpg");
		
	}
	
	public void RandNumber()	// 제작중 - 랜덤하게 섞고 섞고 돌리고
	{
		int check = 0;
		Random rand = new Random();
		
		for(int index = 0; index < arr.length; index++)	// 16개 카드에 순서대로 카드번호 부여
		{
			arr[index] = rand.nextInt(8) + 1;	// 배열에 1~8의 랜덤한 이미지번호가 들어감, 뒷면인 0번은 제외
			
			for(int same = 0; same < index; same++)
			{
				if(arr[index] == arr[same])
					check++;
			}
			
			if(check == 2)
			{
				check = 0;
				index--;
				continue;
			}
			
			check = 0;
		}
	}
	
	public int GetArr(int i) // 셔플한 이미지번호를 메인에서 사용 - 카드버튼 클래스로 넣어줌
	{						// 카드버튼에 넣어줄 때 GetImage(GetArr(i))로 사용
		return arr[i];		// 눌렀을 때 같은 이미지인지 판별하는 이벤트를 위하여 배열에 저장된 번호도 함께 넘겨준다
	}
	
	public ImageIcon GetImage(int i) // 카드의 이미지를 메인에서 사용 - 카드버튼 클래스로 넣어줌
	{								// arr의 배열에 저장된 번호에 따라 그림을 넣어준다
		return image[i];			// 예) i(0)번째의 카드에 arr[0]에 저장된 5의 이미지번호대로 image[5]를 넣어준다
	}
	
	
	
}
